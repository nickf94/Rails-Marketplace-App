<p id="notice"><%= notice %></p>

<p style="font-size:18px">
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <%= image_tag @product.image, width: 250 %>
</p>

<p style="font-size:18px">
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<div>
<% if @product.price %>
<p class="list-item" style="font-size:16px">
  <%= number_to_currency @product.price %>
</p>
<div data-turbolinks="false">
  <%= link_to "Buy now", new_order_path(@product) %>
</div>
<% end %>
<%= link_to 'Back', products_index_path %>
