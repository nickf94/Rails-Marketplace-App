<%= render partial: 'navbar' %>
<p id="notice"><%= notice %></p>


      <h1 class="title">
        Products
      </h1>
<%= link_to 'New Product', new_product_path %>
<table class="table container">
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <figure class="image is-square">
            <%= product.image.attached? ? image_tag(product.image) : '' %>
          </figure>
        </td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product, class: "button is-small is-primary is-outlined is-rounded" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-small is-danger is-rounded" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
